<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/updateProfileHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Select Update Field"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="75dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="30dp"/>

    <Spinner
        android:id="@+id/updateUserSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:entries="@array/updateuserchoices"/>

    <EditText
        android:id="@+id/updateStringEditText"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:visibility="gone"
        android:inputType="textPostalAddress"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/updateNumberEditText"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:visibility="visible"
        android:inputType="number"
        android:layout_marginTop="10dp"/>

    <Spinner
        android:id="@+id/updateStateSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:entries="@array/states"/>

    <Button
        android:id="@+id/updateUserButtonPopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/blue"/>


</LinearLayout>
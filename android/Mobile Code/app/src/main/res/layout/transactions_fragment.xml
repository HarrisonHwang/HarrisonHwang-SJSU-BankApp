<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionsFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/billpaymentbuttoninTransaction"
            android:layout_width="112dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="64dp"
            android:layout_marginTop="60dp"
            android:background="#00000000"
            android:src="@drawable/billpaymenticon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/transferbutton"
            android:layout_width="112dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="64dp"
            android:background="#00000000"
            android:src="@drawable/transfericon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imagedepositbutton"
            android:layout_width="112dp"
            android:layout_height="90dp"
            android:layout_below="@+id/transferHeader"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="64dp"
            android:background="#00000000"
            android:src="@drawable/cameraicon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transferHeader" />

        <TextView
            android:id="@+id/billPaymentHeader"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/billpaymentbuttoninTransaction"
            android:layout_alignParentStart="true"
            android:layout_marginStart="76dp"
            android:layout_marginTop="8dp"
            android:text="Bill Payments"
            app:layout_constraintEnd_toStartOf="@+id/transferHeader"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/billpaymentbuttoninTransaction" />

        <TextView
            android:id="@+id/transferHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transferbutton"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="88dp"
            android:text="Transfers"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transferbutton" />

        <TextView
            android:id="@+id/imageDepositHeader"
            android:layout_width="98dp"
            android:layout_height="20dp"
            android:layout_below="@+id/imagedepositbutton"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="67dp"
            android:text="Image Deposit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagedepositbutton" />

        <ImageButton
            android:id="@+id/addAccountButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="52dp"
            android:background="#00000000"
            android:src="@drawable/addaccounticon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/withdrawHeader" />

        <TextView
            android:id="@+id/addAccountHeader"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addAccountButton"
            android:layout_alignParentStart="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="8dp"
            android:text="Add Account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addAccountButton" />

        <ImageButton
            android:id="@+id/withdrawButton"
            android:layout_width="112dp"
            android:layout_height="90dp"
            android:layout_below="@+id/billPaymentHeader"
            android:layout_alignParentStart="true"
            android:layout_marginStart="64dp"
            android:layout_marginTop="52dp"
            android:background="#00000000"
            android:src="@drawable/withdrawicon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/billPaymentHeader" />

        <TextView
            android:id="@+id/withdrawHeader"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="92dp"
            android:layout_marginTop="8dp"
            android:text="Withdraw"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/withdrawButton" />

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="112dp"
            android:layout_height="90dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="64dp"
            android:background="#00000000"
            android:src="@drawable/deleteicon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageDepositHeader" />

        <TextView
            android:id="@+id/deleteAccountHeader"
            android:layout_width="97dp"
            android:layout_height="22dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="68dp"
            android:text="Delete Account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/deleteButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>